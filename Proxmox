#!/bin/bash
set -euo pipefail

# =============================
# SDGAMER Multi-VM Manager
# (Pure QEMU + Proxmox Version)
# =============================

# Function to display header
display_header() {
    clear
    echo -e "\033[1;36m"
    cat << "EOF"
  ____  ____   ____    _    __  __ _____ ____  
 / ___||  _ \ / ___|  / \  |  \/  | ____|  _ \ 
 \___ \| | | | |  _  / _ \ | |\/| |  _| | |_) |
  ___) | |_| | |_| |/ ___ \| |  | | |___|  _ < 
 |____/|____/ \____/_/   \_\_|  |_|_____|_| \_\
                                               
        ğŸ”§ Pure QEMU + Proxmox Integration ğŸ”§                                      
EOF
    echo -e "\033[0m"
}

# Initialize paths
VM_DIR="${VM_DIR:-$HOME/vms}"
PROXMOX_DIR="${PROXMOX_DIR:-$HOME/proxmox}"
mkdir -p "$VM_DIR" "$PROXMOX_DIR"

# Function to display colored output with emojis
print_status() {
    local type=$1
    local message=$2
    case $type in
        "INFO") echo -e "\033[1;34mğŸ“‹ [INFO]\033[0m $message" ;;
        "WARN") echo -e "\033[1;33mâš ï¸  [WARN]\033[0m $message" ;;
        "ERROR") echo -e "\033[1;31mâŒ [ERROR]\033[0m $message" ;;
        "SUCCESS") echo -e "\033[1;32mâœ… [SUCCESS]\033[0m $message" ;;
        "INPUT") echo -e "\033[1;36mğŸ¯ [INPUT]\033[0m $message" ;;
        *) echo "[$type] $message" ;;
    esac
}

# Function to check dependencies
check_dependencies() {
    local deps=("qemu-system-x86_64" "wget" "qemu-img" "lsof")
    for dep in "${deps[@]}"; do
        if ! command -v "$dep" &> /dev/null; then
            print_status "ERROR" "ğŸ”§ Missing dependency: $dep. Install via: sudo apt install qemu-system qemu-utils wget lsof"
            exit 1
        fi
    done
}

# Function to save VM configuration
save_vm_config() {
    local config_file="$VM_DIR/$VM_NAME.conf"
    cat > "$config_file" <<EOF
VM_NAME="$VM_NAME"
OS_TYPE="$OS_TYPE"
HOSTNAME="$HOSTNAME"
USERNAME="$USERNAME"
PASSWORD="$PASSWORD"
DISK_SIZE="$DISK_SIZE"
MEMORY="$MEMORY"
CPUS="$CPUS"
SSH_PORT="$SSH_PORT"
GUI_MODE="$GUI_MODE"
IMG_FILE="$IMG_FILE"
SEED_FILE="$SEED_FILE"
PROXMOX_ENABLED="${PROXMOX_ENABLED:-false}"
PROXMOX_VMID="${PROXMOX_VMID:-}"
EOF
    print_status "SUCCESS" "ğŸ’¾ SDGAMER Config saved to $config_file"
}

# Function to setup VM image
setup_vm_image() {
    if [[ ! -f "$IMG_FILE" ]]; then
        print_status "INFO" "ğŸŒ Downloading Cloud Image..."
        wget --progress=bar:force "$IMG_URL" -O "$IMG_FILE"
    fi
    qemu-img resize "$IMG_FILE" "$DISK_SIZE" &>/dev/null || true

    # Create cloud-init
    cat > user-data <<EOF
#cloud-config
hostname: $HOSTNAME
ssh_pwauth: true
users:
  - name: $USERNAME
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    password: $(openssl passwd -6 "$PASSWORD")
EOF
    echo "instance-id: iid-$VM_NAME" > meta-data
    
    if command -v cloud-localds &> /dev/null; then
        cloud-localds "$SEED_FILE" user-data meta-data
    else
        # Fallback to genisoimage if cloud-utils isn't installed
        genisoimage -output "$SEED_FILE" -volid cidata -joliet -rock user-data meta-data &>/dev/null
    fi
    rm user-data meta-data
}

# Function to start VM (Local Pure QEMU)
start_vm_local() {
    local vm_name=$1
    if source "$VM_DIR/$vm_name.conf"; then
        print_status "INFO" "ğŸš€ Starting SDGAMER Local VM: $vm_name"
        
        local qemu_cmd=(
            qemu-system-x86_64 -m "$MEMORY" -smp "$CPUS" -cpu qemu64
            -machine type=pc,accel=tcg
            -drive "file=$IMG_FILE,format=qcow2,if=virtio"
            -drive "file=$SEED_FILE,format=raw,if=virtio"
            -netdev "user,id=n0,hostfwd=tcp::$SSH_PORT-:22"
            -device virtio-net-pci,netdev=n0
        )
        
        if [[ "$GUI_MODE" == "true" ]]; then
            qemu_cmd+=(-vga virtio -display gtk)
        else
            qemu_cmd+=(-nographic)
        fi
        
        "${qemu_cmd[@]}"
    fi
}

# Function to handle Proxmox Config
configure_proxmox() {
    print_status "INFO" "ğŸ”§ Proxmox Setup"
    read -p "Proxmox IP: " P_HOST
    read -p "Proxmox User: " P_USER
    echo "PROXMOX_HOST=$P_HOST" > "$HOME/.proxmox.conf"
    echo "PROXMOX_USER=$P_USER" >> "$HOME/.proxmox.conf"
    print_status "SUCCESS" "âœ… Proxmox Host Configured"
}

# Main Menu
main_menu() {
    while true; do
        display_header
        local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null | sort))
        
        if [ ${#vms[@]} -gt 0 ]; then
            print_status "INFO" "ğŸ“ Local VMs:"
            for i in "${!vms[@]}"; do
                echo "  $((i+1))) ${vms[$i]}"
            done
            echo
        fi

        echo "ğŸ“‹ SDGAMER MENU:"
        echo "  1) ğŸ†• Create New VM"
        echo "  2) ğŸš€ Start Local (Pure QEMU)"
        echo "  3) â˜ï¸  Proxmox Setup"
        echo "  4) ğŸ—‘ï¸  Delete VM"
        echo "  0) ğŸ‘‹ Exit"
        
        read -p "$(print_status "INPUT" "ğŸ¯ Choice: ")" choice
        case $choice in
            1)
                read -p "VM Name: " VM_NAME
                OS_TYPE="Debian 13"
                IMG_URL="https://cloud.debian.org/images/cloud/trixie/daily/latest/debian-13-generic-amd64-daily.qcow2"
                read -p "User: " USERNAME
                read -s -p "Pass: " PASSWORD; echo
                DISK_SIZE="20G"; MEMORY="2048"; CPUS="2"; SSH_PORT="2222"; GUI_MODE="false"
                IMG_FILE="$VM_DIR/$VM_NAME.img"; SEED_FILE="$VM_DIR/$VM_NAME-seed.iso"
                setup_vm_image
                save_vm_config
                ;;
            2)
                read -p "VM Number: " num
                start_vm_local "${vms[$((num-1))]}"
                ;;
            3) configure_proxmox ;;
            4)
                read -p "VM Number: " num
                rm -f "$VM_DIR/${vms[$((num-1))]}"*
                print_status "SUCCESS" "Removed VM files."
                ;;
            0) exit 0 ;;
        esac
        read -p "Press Enter..."
    done
}

check_dependencies
main_menu
